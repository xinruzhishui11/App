<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/list_item_bg_selector"
    >
    
    <ImageView
        android:id="@+id/item_news_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/item_news_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_news_image"
        android:layout_alignLeft="@+id/item_news_text"
        android:text="来源"
        android:textColor="#66000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_news_text"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_news_image"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/item_news_image"
        android:text="南海干起来了"
        android:textColor="#000000"
        android:textSize="17sp" />

</RelativeLayout>