<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/duanzi_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/duanzi_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/duanzi_item_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/duanzi_item_title"
            android:text="20  mins  ago"
            android:textColor="#77787b"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/duanzi_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="今天不开心"
        android:textColor="#444444"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/duanzi_item_dinazan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 3"
            android:textColor="#77787b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/duanzi_item_tvView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/duanzi_item_dinazan"
            android:text="XX 3"
            android:textColor="#77787b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/duanzi_item_tucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/duanzi_item_tvView"
            android:text="吐槽   3"
            android:textColor="#77787b"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>